<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- start servlet -->
    <servlet>
        <servlet-name>StartServlet</servlet-name>
        <servlet-class>by.tut.ssmt.app.servlets.StartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StartServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- add servlet -->
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>by.tut.ssmt.app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

 <!-- calculation servlet -->
    <servlet>
        <servlet-name>CalculationServlet</servlet-name>
        <servlet-class>by.tut.ssmt.app.servlets.CalculationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CalculationServlet</servlet-name>
        <url-pattern>/calculate</url-pattern>
    </servlet-mapping>



</web-app>